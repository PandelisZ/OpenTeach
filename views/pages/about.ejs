<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="http://maps.googleapis.com/maps/api/js"></script>
    <script>
    function initialize() {
      var mapProp = {
        center: new google.maps.LatLng(52.4832861,	-1.883485),
        zoom:11,
        mapTypeId:google.maps.MapTypeId.ROADMAP
      };

      var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);

      map.set('styles', [{"featureType":"all","elementType":"all","stylers":[{"hue":"#ee3424"}]},{"featureType":"poi","elementType":"all","stylers":[{"visibility":"off"}]},{"featureType":"poi.attraction","elementType":"all","stylers":[{"visibility":"off"}]},{"featureType":"poi.business","elementType":"all","stylers":[{"visibility":"off"}]},{"featureType":"poi.government","elementType":"all","stylers":[{"visibility":"off"}]},{"featureType":"transit","elementType":"all","stylers":[{"visibility":"on"}]}]);

      var marker1 = new google.maps.Marker({
        position: { lat: 52.4832861, lng: -1.883485 },
        map: map,
        title: 'Pandelis Zembashis'
      });
      var infowindow1 = new google.maps.InfoWindow({
        content: '<h3>Pandelis Zembashis</h3><h5>Computer Science Student at BCU</h5><a href="/profile/pandelis">View profile</a>'
      });
      marker1.addListener('click', function() {
        infowindow1.open(map, marker1);
      });
      var marker2 = new google.maps.Marker({
        position: { lat: 52.4932861, lng: -1.863485 },
        map: map,
        title: 'Scott Street'
      });
      var infowindow2 = new google.maps.InfoWindow({
        content: '<h3>Scott Street</h3><h5>Computer Science Student at Aston</h5><a href="/profile/sprusr">View profile</a>'
      });
      marker2.addListener('click', function() {
        infowindow2.open(map, marker2);
      });
      var marker3 = new google.maps.Marker({
        position: { lat: 52.459697, lng: -1.957926 },
        map: map,
        title: 'Nat Baulch-Jones'
      });
      var infowindow3 = new google.maps.InfoWindow({
        content: '<h3>Nat Baulch-Jones</h3><h5>Computer Science Student at Aston</h5><a href="/profile/nattyxd">View profile</a>'
      });
      marker3.addListener('click', function() {
        infowindow3.open(map, marker3);
      });
    }

    google.maps.event.addDomListener(window, 'load', initialize);
    </script>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">

                <div class="jumbotron">
                  <h2>Talent Locator</h2>

                    <div class="input-group">
                          <input type="text" class="form-control" placeholder="Search for...">
                          <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                          </span>
                        </div><!-- /input-group -->
                        <br>
                    <div id="googleMap" style="width:100%;height:380px;"></div>


                </div>

            </div>
            <div class="col-sm-4">

                <div class="well">
                    <h3>Search for skill</h3>
                    <p>Choose an area and we will show you everyone who is willing to donate their time to your cause</p>
                    <h3>Sign Up for yourself</h3>
                    <p>Do you have spare time and want to help better your community? Why not sign up and help out with community events or in schools and colleges with different workshops and talks.</p>
                </div>

            </div>
        </div>
    </main>
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>
